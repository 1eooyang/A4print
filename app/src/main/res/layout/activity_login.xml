<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱："
        android:id="@+id/login_email"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="186dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        android:id="@+id/login_password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/login_email"
        android:layout_alignStart="@+id/login_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/login_email"
        android:layout_toRightOf="@+id/login_email"
        android:layout_toEndOf="@+id/login_email" android:text="935524068@qq.com" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/login_password"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" android:text="111111"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/login_btn_login"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/login_password"
        android:layout_toEndOf="@+id/login_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/login_btn_cancel"
        android:layout_alignTop="@+id/login_btn_login"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />
</RelativeLayout>
